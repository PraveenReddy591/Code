pipeline{
    agent any
    
    environment{
        PATH = "/opt/maven3/bin:$PATH"
    }
    stages{
        stage("Git Checkout"){
            steps{
               git credentialsId: '93c5153b-998c-41db-8a49-33771414df95', url: 'https://github.com/chinna421/code.git'
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
                sh "mv target/*.war target/myweb.war"
            }
        }
        sshagent(['tomcat-new']) {
            steps{
                sshagent(['tomcat-new']) {
                sh """
                    scp -o StrictHostKeyChecking=no target/myweb.war  ec2-user@10.1.0.59:/ec2-user/apache-tomcat-9.0.82/webapps/
                    
                    ssh ec2-user@10.1.0.59:/ec2-user/apache-tomcat-9.0.82/bin/shutdown.sh
                    
                    ssh ec2-user@10.1.0.59:/ec2-user/apache-tomcat-9.0.82/bin/startup.sh
                
                """
            }
            
            }
        }
    }
}
